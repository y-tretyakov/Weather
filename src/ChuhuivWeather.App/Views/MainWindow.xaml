<Window x:Class="ChuhuivWeather.App.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChuhuivWeather.App.Views"
        xmlns:vm="clr-namespace:ChuhuivWeather.App.ViewModels"
        xmlns:converters="clr-namespace:ChuhuivWeather.App.Converters"
        mc:Ignorable="d"
        Title="ÐŸÐ¾Ð³Ð¾Ð´Ð° Ð² Ð§ÑƒÐ³ÑƒÐµÐ²Ðµ" Height="600" Width="960"
        MinHeight="500" MinWidth="800"
        WindowStartupLocation="CenterScreen">
    
    <Window.DataContext>
        <vm:MainViewModel />
    </Window.DataContext>
    
    <Window.Resources>
        <converters:WeatherCodeToIconConverter x:Key="WeatherCodeToIconConverter" />
        <converters:WeatherCodeToDescriptionConverter x:Key="WeatherCodeToDescriptionConverter" />
        <converters:TemperatureFormatter x:Key="TemperatureFormatter" />
        <converters:WindSpeedFormatter x:Key="WindSpeedFormatter" />
        <converters:PressureFormatter x:Key="PressureFormatter" />
        <converters:HumidityFormatter x:Key="HumidityFormatter" />
        <converters:PrecipitationFormatter x:Key="PrecipitationFormatter" />
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        
        <Style x:Key="CurrentTempStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="56" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Foreground" Value="#2C3E50" />
        </Style>
        
        <Style x:Key="WeatherIconStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="56" />
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>
        
        <Style x:Key="SmallWeatherIconStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="28" />
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>
        
        <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Foreground" Value="#34495E" />
            <Setter Property="Margin" Value="0,0,0,12" />
        </Style>
        
        <Style x:Key="InfoLabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Foreground" Value="#7F8C8D" />
            <Setter Property="Margin" Value="0,4" />
        </Style>
        
        <Style x:Key="InfoValueStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14" />
            <Setter Property="FontWeight" Value="Medium" />
            <Setter Property="Foreground" Value="#2C3E50" />
            <Setter Property="Margin" Value="0,4" />
        </Style>
        
        <Style x:Key="ForecastCardStyle" TargetType="Border">
            <Setter Property="Background" Value="#F8F9FA" />
            <Setter Property="CornerRadius" Value="12" />
            <Setter Property="Padding" Value="16" />
            <Setter Property="Margin" Value="0,8" />
        </Style>
    </Window.Resources>
    
    <Grid Margin="24">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="20" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>
        
        <!-- Left Panel - Current Conditions -->
        <Border Grid.Column="0" Background="White" CornerRadius="16" Padding="24">
            <Border.Effect>
                <DropShadowEffect Color="#E0E0E0" BlurRadius="15" ShadowDepth="5" Opacity="0.3" />
            </Border.Effect>
            
            <StackPanel>
                <!-- Location Header -->
                <TextBlock Text="{Binding Location}" 
                           Style="{StaticResource SectionHeaderStyle}"
                           HorizontalAlignment="Center"
                           FontSize="20" />
                
                <!-- Current Temperature and Icon -->
                <StackPanel Orientation="Horizontal" 
                            HorizontalAlignment="Center" 
                            Margin="0,20,0,16">
                    <TextBlock Text="{Binding Snapshot.Current.WeatherCode, Converter={StaticResource WeatherCodeToIconConverter}}"
                               Style="{StaticResource WeatherIconStyle}"
                               Margin="0,0,16,0" />
                    <TextBlock Text="{Binding Snapshot.Current.TemperatureC, Converter={StaticResource TemperatureFormatter}, ConverterParameter='large'}"
                               Style="{StaticResource CurrentTempStyle}" />
                </StackPanel>
                
                <!-- Feels Like Temperature -->
                <TextBlock HorizontalAlignment="Center" Margin="0,0,0,20">
                    <Run Text="ÐžÑ‰ÑƒÑ‰Ð°ÐµÑ‚ÑÑ ÐºÐ°Ðº " Foreground="#7F8C8D" />
                    <Run Text="{Binding Snapshot.Current.ApparentTemperatureC, Converter={StaticResource TemperatureFormatter}, ConverterParameter='long'}" 
                         FontWeight="Medium" Foreground="#2C3E50" />
                </TextBlock>
                
                <!-- Weather Details -->
                <StackPanel Margin="0,16,0,0">
                    <!-- Humidity -->
                    <Grid Margin="0,4">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Ð’Ð»Ð°Ð¶Ð½Ð¾ÑÑ‚ÑŒ" Style="{StaticResource InfoLabelStyle}" />
                        <TextBlock Grid.Column="1" 
                                   Text="{Binding Snapshot.Current.RelativeHumidityPct, Converter={StaticResource HumidityFormatter}}" 
                                   Style="{StaticResource InfoValueStyle}" 
                                   HorizontalAlignment="Right" />
                    </Grid>
                    
                    <!-- Wind -->
                    <Grid Margin="0,4">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Ð’ÐµÑ‚ÐµÑ€" Style="{StaticResource InfoLabelStyle}" />
                        <TextBlock Grid.Column="1" 
                                   Text="{Binding Snapshot.Current.WindSpeedKmh, Converter={StaticResource WindSpeedFormatter}}" 
                                   Style="{StaticResource InfoValueStyle}" 
                                   HorizontalAlignment="Right" />
                    </Grid>
                    
                    <!-- Pressure -->
                    <Grid Margin="0,4">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Ð”Ð°Ð²Ð»ÐµÐ½Ð¸Ðµ" Style="{StaticResource InfoLabelStyle}" />
                        <TextBlock Grid.Column="1" 
                                   Text="{Binding Snapshot.Current.PressureMslHpa, Converter={StaticResource PressureFormatter}}" 
                                   Style="{StaticResource InfoValueStyle}" 
                                   HorizontalAlignment="Right" />
                    </Grid>
                    
                    <!-- Cloud Cover -->
                    <Grid Margin="0,4">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="ÐžÐ±Ð»Ð°Ñ‡Ð½Ð¾ÑÑ‚ÑŒ" Style="{StaticResource InfoLabelStyle}" />
                        <TextBlock Grid.Column="1" 
                                   Text="{Binding Snapshot.Current.CloudCoverPct, Converter={StaticResource HumidityFormatter}}" 
                                   Style="{StaticResource InfoValueStyle}" 
                                   HorizontalAlignment="Right" />
                    </Grid>
                </StackPanel>
                
                <!-- Refresh Button -->
                <Button Command="{Binding RefreshCommand}" 
                        Margin="0,24,0,0" 
                        Padding="16,8" 
                        FontSize="14" 
                        FontWeight="Medium"
                        Background="#3498DB" 
                        Foreground="White" 
                        BorderThickness="0"
                        HorizontalAlignment="Stretch">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <TextBlock Text="ðŸ”„" FontSize="16" Margin="0,0,8,0" />
                        <TextBlock Text="ÐžÐ±Ð½Ð¾Ð²Ð¸Ñ‚ÑŒ" />
                    </StackPanel>
                </Button>
                
                <!-- Loading Indicator -->
                <StackPanel Orientation="Horizontal" 
                            HorizontalAlignment="Center" 
                            Margin="0,12,0,0"
                            Visibility="{Binding IsBusy, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <TextBlock Text="â³" FontSize="16" Margin="0,0,8,0" />
                    <TextBlock Text="Ð—Ð°Ð³Ñ€ÑƒÐ·ÐºÐ°..." FontSize="14" Foreground="#7F8C8D" />
                </StackPanel>
                
                <!-- Error Display -->
                <TextBlock Text="{Binding Error}" 
                           Foreground="#E74C3C" 
                           FontSize="12" 
                           TextWrapping="Wrap" 
                           Margin="0,8,0,0"
                           Visibility="{Binding Error, Converter={StaticResource BooleanToVisibilityConverter}}" />
                
                <!-- Last Updated -->
                <TextBlock Text="{Binding LastUpdated, StringFormat='ÐžÐ±Ð½Ð¾Ð²Ð»ÐµÐ½Ð¾: {0:HH:mm}'}"
                           FontSize="12" 
                           Foreground="#95A5A6" 
                           HorizontalAlignment="Center" 
                           Margin="0,8,0,0"
                           Visibility="{Binding LastUpdated, Converter={StaticResource BooleanToVisibilityConverter}}" />
            </StackPanel>
        </Border>
        
        <!-- Right Panel - 3-Day Forecast -->
        <Border Grid.Column="2" Background="White" CornerRadius="16" Padding="24">
            <Border.Effect>
                <DropShadowEffect Color="#E0E0E0" BlurRadius="15" ShadowDepth="5" Opacity="0.3" />
            </Border.Effect>
            
            <StackPanel>
                <TextBlock Text="ÐŸÑ€Ð¾Ð³Ð½Ð¾Ð· Ð½Ð° 3 Ð´Ð½Ñ" 
                           Style="{StaticResource SectionHeaderStyle}" 
                           HorizontalAlignment="Center" />
                
                <ItemsControl ItemsSource="{Binding Snapshot.Next3Days}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Style="{StaticResource ForecastCardStyle}">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>
                                    
                                    <!-- Date and Icon -->
                                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,8">
                                        <TextBlock Text="{Binding WeatherCode, Converter={StaticResource WeatherCodeToIconConverter}}"
                                                   Style="{StaticResource SmallWeatherIconStyle}"
                                                   Margin="0,0,12,0" />
                                        <TextBlock Text="{Binding DateLocal, StringFormat='{}{0:ddd, dd MMM}'}" 
                                                   FontSize="16" 
                                                   FontWeight="Medium" 
                                                   Foreground="#2C3E50" 
                                                   VerticalAlignment="Center" />
                                    </StackPanel>
                                    
                                    <!-- Temperature Range -->
                                    <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,4">
                                        <TextBlock Text="Ð¼Ð¸Ð½ " FontSize="14" Foreground="#7F8C8D" />
                                        <TextBlock Text="{Binding TminC, Converter={StaticResource TemperatureFormatter}}" 
                                                   FontSize="14" FontWeight="Medium" Foreground="#3498DB" />
                                        <TextBlock Text="Â° Ð¼Ð°ÐºÑ " FontSize="14" Foreground="#7F8C8D" Margin="8,0,0,0" />
                                        <TextBlock Text="{Binding TmaxC, Converter={StaticResource TemperatureFormatter}}" 
                                                   FontSize="14" FontWeight="Medium" Foreground="#E67E22" />
                                    </StackPanel>
                                    
                                    <!-- Precipitation -->
                                    <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,4">
                                        <TextBlock Text="ðŸ’§ Ð¾ÑÐ°Ð´ÐºÐ¸ " FontSize="14" Foreground="#7F8C8D" />
                                        <TextBlock Text="{Binding PrecipitationSumMm, Converter={StaticResource PrecipitationFormatter}}" 
                                                   FontSize="14" FontWeight="Medium" Foreground="#2C3E50" />
                                    </StackPanel>
                                    
                                    <!-- Wind Gusts -->
                                    <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0,4">
                                        <TextBlock Text="ðŸ’¨ Ð¿Ð¾Ñ€Ñ‹Ð²Ñ‹ " FontSize="14" Foreground="#7F8C8D" />
                                        <TextBlock Text="{Binding WindGustMaxKmh, Converter={StaticResource WindSpeedFormatter}}" 
                                                   FontSize="14" FontWeight="Medium" Foreground="#2C3E50" />
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </Border>
    </Grid>
</Window>
